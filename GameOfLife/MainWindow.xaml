<Window x:Class="GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
           WindowStartupLocation="CenterScreen" WindowState="Maximized"
    Title="MainWindow" Height="800" Width="800">
    <StackPanel>
        <Grid Visibility="Visible" Name="myGrid" MouseMove="Grid_MouseMove" MouseLeftButtonUp="Grid_MouseUp" MouseLeftButtonDown="Grid_MouseDown" Height="700" VerticalAlignment="Top">

        </Grid>
        <Label Width="150" HorizontalAlignment="Left">Nombre de lignes</Label>
        <Slider Thumb.DragCompleted="onDragCompleted" Minimum ="20" Maximum="50" TickFrequency="5" Width="200" HorizontalAlignment="Left"></Slider>
        <Button x:Name="Reset" Content="Reset" HorizontalAlignment="Left" Click="ResetClick" VerticalAlignment="Top" Width="75" Canvas.Left="200" Canvas.Top="10"/>

    </StackPanel>

</Window>
